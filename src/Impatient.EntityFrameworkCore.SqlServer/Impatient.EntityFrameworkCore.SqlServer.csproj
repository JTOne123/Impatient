<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>
  
  <PropertyGroup>
    <VersionPrefix>2.0.0</VersionPrefix>
    <Authors>tuespetre</Authors>
    <PackageProjectUrl>https://github.com/tuespetre/Impatient</PackageProjectUrl>
    <RepositoryUrl>https://github.com/tuespetre/Impatient</RepositoryUrl>
    <Description>A plugin for Microsoft.EntityFrameworkCore.SqlServer to use Impatient for its query compiler.</Description>
    <PackageTags>EF;EF Core;EFCore;Entity Framework Core;LINQ;ORM;SQL</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../Impatient/Impatient.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="2.1.0-preview2-final" />
  </ItemGroup>

</Project>
